generator client {
  provider        = "prisma-client-js"
}

datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  email       String   @id @unique
  name        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  role        Role     @default(USER)

  urls Url[]
}


enum Role {
  USER
  ADMIN
}

model Url {
  shortUrl    String   @id @unique @db.VarChar(7)
  longUrl     String   @db.VarChar(10000)
  dateCreated DateTime @default(now())
  name        String?

  User   User?   @relation(fields: [userId], references: [email])
  userId String?

  statistics Statistics[]

  @@index([userId])
}

model Statistics {
  id String @id @unique @default(uuid())
  visitDate DateTime @default(now())

  Url Url @relation(fields: [slug], references: [shortUrl])
  slug String

  country Countries[]
  device Devices[]

  @@index([slug])
}

model Countries {
  iso String @id @unique @db.VarChar(7)
  name String @unique @db.VarChar(80)
  nicename String @db.VarChar(80)

  Statistics Statistics @relation(fields: [statisticId], references: [id])
  statisticId String

  @@index([statisticId])
}

model Devices {
  id String @id @unique @default(uuid())
  deviceName String @unique @db.VarChar(80)
  type String @unique @db.VarChar(80)

  Statistics Statistics @relation(fields: [statisticId], references: [id])
  statisticId String

  @@index([statisticId])
}