generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  email     String   @id @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  role      Role     @default(USER)

  urls Url[]
}

enum Role {
  USER
  ADMIN
}

model Url {
  shortUrl    String   @id @unique @db.VarChar(7)
  longUrl     String   @db.VarChar(10000)
  dateCreated DateTime @default(now())
  name        String?

  User   User?   @relation(fields: [userId], references: [email])
  userId String?

  statistics Statistics[]
  categories CategoriesOnUrls[]

  @@index([userId])
}

model Category {
  id        String   @id @unique @default(uuid())
  name      String   @unique
  createdAt DateTime @default(now())

  urls CategoriesOnUrls[]
}

model CategoriesOnUrls {
  url        Url      @relation(fields: [urlId], references: [shortUrl])
  urlId      String
  category   Category @relation(fields: [categoryId], references: [id])
  categoryId String
  createdAt  DateTime @default(now())

  @@id([urlId, categoryId])
  @@index([urlId])
  @@index([categoryId])
}

model Statistics {
  id        String   @id @unique @default(uuid())
  visitDate DateTime @default(now())

  Url  Url    @relation(fields: [slug], references: [shortUrl])
  slug String

  @@index([slug])
}
